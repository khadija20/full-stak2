{% extends 'base.html.twig' %}

{% block title %}accueil
{% endblock %}

{% block body %}
	
	
	  
	  <table class="table">
  <thead>
    <tr>
      <th scope="col">nom</th>
      <th scope="col">categorie</th>
      <th scope="col">description</th>
      <th scope="col">prix</th>
	   <th scope="col">quantite</th>
	    <th scope="col">image</th>
    </tr>
  </thead>
  <tbody>
  {% for item in produits %}
    <tr>
      <th scope="row">{{item.nom}}</th>
      <td>{{item.categorie}}</td>
      <td>{{item.description}}</td>
      <td>{{item.prix}}</td>
	  <td>{{item.quantite}}</td>
	  <td><figure class="figure">
  <img src="uploads/images/products/{{item.image}}"  style="width: 150px; height: 100px; class="figure-img img-fluid rounded" >

</figure></td>
    </tr>
  {% endfor %}
  
  </tbody>
</table>

{% endblock %}

